# Пример переменных окружения
# Скопируйте этот файл в .env и заполните своими значениями

# ============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# ============================================================================

# Основные параметры
GAS_PRICE=0.005
NUM_WALLETS=119

# Пороги операций
MIN_REWARDS_TO_WITHDRAW=700000
MIN_SEND_AMOUNT=50000
MIN_BALANCE_REMAIN=15000
MAX_BALANCE_REMAIN=25000

# Задержки (в секундах)
MIN_DELAY=3600
MAX_DELAY=7200

# ============================================================================
# RPC УЗЛЫ (ДОПОЛНИТЕЛЬНЫЕ)
# ============================================================================

# Добавьте свои RPC узлы для повышения стабильности
CUSTOM_RPC_1=https://your-custom-rpc-1.com:443
CUSTOM_RPC_2=https://your-custom-rpc-2.com:443
CUSTOM_RPC_3=https://your-custom-rpc-3.com:443

# ============================================================================
# ФАЙЛЫ КОШЕЛЬКОВ
# ============================================================================

# Пути к файлам с адресами кошельков
OKX_WALLETS_FILE=okx_wallets
BITGET_WALLETS_FILE=bitget_wallets
BINANCE_WALLETS_FILE=binance_wallets

# ============================================================================
# УВЕДОМЛЕНИЯ
# ============================================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Discord Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Email уведомления
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=notifications@yourdomain.com

# ============================================================================
# РЕЖИМЫ РАБОТЫ
# ============================================================================

# Режим отладки (true/false)
DEBUG_MODE=false

# Тестовый режим без реальных транзакций (true/false)
DRY_RUN=false

# Пропустить проверку наград (true/false)
SKIP_REWARDS_CHECK=false

# ============================================================================
# ЛОГИРОВАНИЕ
# ============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Директория для логов
LOG_DIR=logs

# Логирование в файл (true/false)
LOG_TO_FILE=true

# Логирование в консоль (true/false)
LOG_TO_CONSOLE=true

# ============================================================================
# РАСШИРЕННЫЕ НАСТРОЙКИ
# ============================================================================

# Максимальное количество повторных попыток
MAX_WITHDRAW_ATTEMPTS=3
MAX_SEND_ATTEMPTS=3
TX_CHECK_RETRIES=10
TX_CHECK_WAIT=30

# Fallback значения газа
FALLBACK_WITHDRAW_GAS=900000
FALLBACK_SEND_GAS=250000

# Множители увеличения газа при ошибках
WITHDRAW_GAS_MULTIPLIER=1.2
SEND_GAS_MULTIPLIER=1.1

# ============================================================================
# МОНИТОРИНГ
# ============================================================================

# Интервалы проверок (в секундах)
HEALTH_CHECK_INTERVAL=300
STATS_UPDATE_INTERVAL=3600

# Время ежедневного отчета (HH:MM)
DAILY_REPORT_TIME=09:00